{
    "port": 3050,
    "mongoose": {
        "uri": "mongodb://localhost/chat",
        "options": {
            "useNewUrlParser": true,
            "useUnifiedTopology": true,
            "useCreateIndex": true
        }
    },
    "session": {
        "secret": "secret-key",
        "resave": false,
        "saveUninitialized": true,
        "key": "connect.sid",
        "cookie": {
            "path": "/",
            "httpOnly": true,
            "maxAge": null
        }
    }
}
